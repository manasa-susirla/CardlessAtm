<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AmtPin">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="187dp"
        android:layout_height="0dp"
        android:layout_marginBottom="178dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toTopOf="@+id/enter_pin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/acc" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="352dp"
        android:layout_height="273dp"
        android:layout_marginBottom="28dp"
        android:layout_marginEnd="3dp"
        android:layout_marginTop="19dp"
        app:layout_constraintBottom_toTopOf="@+id/button_proceed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.517"
        app:srcCompat="@drawable/cardtwo" />

    <TextView
        android:id="@+id/acc_no"
        android:layout_width="267dp"
        android:layout_height="31dp"
        android:layout_marginBottom="234dp"
        android:layout_marginStart="32dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.871" />

    <TextView
        android:id="@+id/balance"
        android:layout_width="274dp"
        android:layout_height="35dp"
        android:layout_marginBottom="198dp"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:visibility="gone"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/acc_no"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/enter_amt"
        android:layout_width="132dp"
        android:layout_height="36dp"


        android:layout_marginEnd="8dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/back"
        android:ems="10"
        android:hint="Enter Amount"
        android:inputType="textPersonName"
        android:lineSpacingExtra="10sp"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/enter_pin"
        app:layout_constraintEnd_toEndOf="@+id/enter_pin"
        app:layout_constraintHorizontal_bias="0.026"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/enter_pin"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/enter_pin"
        android:layout_width="139dp"
        android:layout_height="36dp"
        android:layout_marginBottom="135dp"
        android:layout_marginEnd="56dp"
        android:background="@drawable/back"
        android:ems="10"
        android:hint="Enter Pin"

        android:inputType="textPersonName"
        android:textAlignment="center"

        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/button_proceed"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="140dp"
        android:layout_marginStart="140dp"
        android:text="Proceed"
        android:visibility="gone"
        android:textColor="#2196F3"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/tick"

        android:layout_width="32dp"
        android:layout_height="30dp"
        android:layout_marginBottom="8dp"


        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/tick2"
        app:layout_constraintBottom_toBottomOf="@+id/enter_pin"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/enter_pin"
        app:layout_constraintTop_toTopOf="@+id/enter_pin"
        app:layout_constraintVertical_bias="0.0" />


</android.support.constraint.ConstraintLayout>